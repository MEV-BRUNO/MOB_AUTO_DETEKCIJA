<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@mipmap/icon_foreground"
        android:drawablePadding="-20dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/auto_asistencija"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        tools:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:drawableTop="@mipmap/detekcija_kvara"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/detekcija_kvara" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:drawableTop="@mipmap/provjeri_sam"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/provjeri_sam" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:drawableTop="@mipmap/pronadi_servis"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/pronadi_servis" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:drawableTop="@mipmap/akcije"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/akcije" />

    </LinearLayout>

</LinearLayout>